{% extends 'base.html.twig' %}
{# {% block header %}{% endblock %} #}
{% block body %}

    {# {{ dump(CategorieProduits) }} #}
    <div class="container" id="pageIndex">
        <div class="col-xl-11 col-lg-11 col-12">
        <h1 id="BestSeller">Nos Meilleures Ventes</h1>
        </div>
        <div class="col-12 row">
            <div class="col-8">
                {# Carousel d'images (vitesse de défilement des images configurée à 5s) #}
                <div id="carouselIndicators" class="carousel slide" data-ride="carousel" data-interval="5000">
                    {# Indicateurs de l'affichage #}
                    <ol class="carousel-indicators">
                        {# Défilement des images à partir de l'image active #}
                        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselIndicators" data-slide-to="4"></li>
                    </ol>
                    {# Affichage des images dans le carousel #}
                    <div class="carousel-inner">
                        {# Affichage des images à partir du carousel active #}
                        <div class="carousel-item active">
                            <img class="img-fluid d-block w-100" src="{{ asset('asset/image/carousel_images/pub guitare.png') }}" title="Promo Guitare" alt="Promo Guitare">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid d-block w-100" src="{{ asset('asset/image/carousel_images/universal_audio.png') }}" title="Promo PLUG-INS" alt="Promo PLUG-INS">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid d-block w-100" src="{{ asset('asset/image/carousel_images/arrangeurs_yamaha.png') }}" title="Promo Arrangeurs" alt="Promo Arrangeurs">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid d-block w-100" src="{{ asset('asset/image/carousel_images/ibanez_GRGR.png') }}" title="Promo Ibanez GRGR" alt="Promo Ibanez GRGR">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid d-block w-100" src="{{ asset('asset/image/carousel_images/imperialstar_2021.png') }}" title="Promo Imperialstar" alt="Promo Imperialstar">
                        </div>
                    </div>
                    {# Boutons de contrôle du défilement vers l'arrière #}
                    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Précédent</span>
                    </a>
                    {# Boutons de contrôle du défilement vers l'avant #}
                    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Suivant</span>
                    </a>
                </div>

                <div class="offset-2">
                    <div id="partenaire">Nos partenaires !</div>
                    <img class="img-fluid" id="imagePartenaire" src="{{ asset('asset/image/partenaires 4 logos.png') }}" title="partenaireLogo" alt="partenaireLogo">
                </div>
            </div>
            <div id="MeilleuresVentes" class="offset-1 col-3 column">
                {#  produit dans les meilleurs vente #}
                {% for produits in produits %}
                <div id="premierProduit">
                    <div class="nomProduit text-center"> {{ produits.NomProduit }}</div>
                    <div class="text-center"><img class="img-fluid"  src= '/asset/image/produits/{{ produits.PhotoProduit }}' title="produitUn" alt="produitUn"></div>
                    <div class="prixHT">{{ produits.PrixProduit }} € H.T.</div>
                </div>
                {% endfor %}
            </div>
        </div>

        <div class="row">
            <img id="picto" class="img-fluid" src="{{ asset('asset/image/banniere centre 4 pictos.png') }}" title="service" alt="imgService">
        </div>
    </div>
{% endblock %}